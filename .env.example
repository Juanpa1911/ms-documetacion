# ============================================
# APLICACIÓN
# ============================================
# Contexto de Flask (testing, development, production)
FLASK_CONTEXT=development

# Puerto de la aplicación
APP_PORT=5000

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================
# MICROSERVICES URLs
# ============================================
# Nombres de host para docker-compose (usados por config.py)
ALUMNOS_HOST=http://localhost:5001/api/v1
ACADEMICA_HOST=http://localhost:5002/api/v1

# Fallback URLs (si no están definidos ALUMNOS_HOST/ACADEMICA_HOST)
ALUMNO_SERVICE_URL=http://localhost:5001/api/v1
ESPECIALIDAD_SERVICE_URL=http://localhost:5002/api/v1

# ============================================
# CACHE TTL (Time To Live en segundos)
# ============================================
CACHE_ALUMNO_TTL=300
CACHE_ESPECIALIDAD_TTL=600

# ============================================
# HTTP REQUEST CONFIGURATION
# ============================================
REQUEST_TIMEOUT=10

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO

# ============================================
# GRANIAN SERVER (producción)
# ============================================
GRANIAN_WORKERS=4
GRANIAN_BLOCKING_THREADS=4
GRANIAN_BACKLOG=2048
GRANIAN_INTERFACE=wsgi

# ============================================
# SQLALCHEMY (opcional - para testing con DB)
# ============================================
SQLALCHEMY_TRACK_MODIFICATIONS=False
SQLALCHEMY_RECORD_QUERIES=True

# ============================================
# DATABASE URIs (opcional - solo si usas PostgreSQL)
# ============================================
# TEST_DATABASE_URI=postgresql+psycopg2://postgres:postgres123@localhost:5432/TEST_SYSACAD
# DEV_DATABASE_URI=postgresql+psycopg2://postgres:postgres123@localhost:5432/DEV_SYSACAD
# PROD_DATABASE_URI=postgresql://postgres:postgres123@localhost:5432/SYSACAD